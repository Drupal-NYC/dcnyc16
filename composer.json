{
    "name": "digitalpulp/ballast",
    "description": "A local development toolset for automating Docker setup and Drupal development.",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Shawn Duncan",
            "role": "Project Lead"
        },
        {
          "name": "Nick Main",
          "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "consolidation/robo": "^1.0",
        "cweagans/composer-patches": "^1.6.5",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/admin_toolbar": "^2.0",
        "drupal/config_split": "^1.3",
        "drupal/console": "^1.9.2",
        "drupal/contact_storage": "^1.0@beta",
        "drupal/core-recommended": "8.8.3",
        "drupal/google_analytics": "^2.2",
        "drupal/pantheon_advanced_page_cache": "^1.0",
        "drupal/recaptcha": "^2.5",
        "drupal/redis": "^1.4",
        "drupal/stage_file_proxy": "^1.0@alpha",
        "drush/drush": "^10.0",
        "oomphinc/composer-installers-extender": "^1.1",
        "pantheon-systems/drupal-integrations": "^8.0",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "require-dev": {
        "drupal/coder": "^8.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
          "Ballast\\": "scripts/robo/src"
        },
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "robo": "@php scripts/robo/BallastRunner.php --ansi",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "composer robo setup:instructions"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "composer robo setup:instructions"
        ]
    },
    "extra": {
        "installer-types": ["bower-asset"],
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/Commands/{$name}": ["type:drupal-drush"]
        },
        "drupal-scaffold": {
          "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
          "includes": [
            "sites/default/default.services.pantheon.preproduction.yml",
            "sites/default/settings.pantheon.php"
          ],
          "excludes": [
            ".csslintrc",
            ".editorconfig",
            ".eslintignore",
            ".eslintrc.json",
            ".htaccess",
            "web.config"
          ]
        }
    }
}
